nodeSelector:
  node.kubernetes.io/broker: "true"
console:
  enabled: true
{% if deployment_type == "production" %}
resources:
  cpu:
    cores: "{{exp_params.broker_cpu}}"
    overprovisioned: true
  memory:
    # enable_memory_locking: true
    container:
      # min: "{{exp_params.broker_mem}}"
      min: "30Gi"
      max: "30Gi"
    redpanda:
      memory: "{{exp_params.broker_mem}}"
      reserveMemory: 0
console:
  enabled: false
{% elif deployment_type == "test" %}
external:
  enabled: true
  addresses:
    - localhost
resources: {}
{% endif %}
config:
  cluster:
    auto_create_topics_enabled: false
    default_topic_partitions: 1
    default_topic_replications: 1
    internal_topic_replication_factor: 1
  # node:
  #   developer_mode: true
{% if exp_params.redpanda_write_caching %}
    write_caching_default: true
{% endif %}
monitoring:
  enabled: false
  scrapeInterval: 5s
listeners:
  admin:
    tls:
      enabled: false
  schemaRegistry:
    port: 8081
  kafka:
    port: 9092
    tls:
      enabled: false
image:
  repository: registry.gitlab.inria.fr/gkovilkk/greenflow/redpanda
  tag: v24.1.8
  pullPolicy: IfNotPresent
  pullSecrets: []
pullSecrets:
  - name: regcred
statefulset:
{% if deployment_type == "test" %}
  replicas: 1
{% elif deployment_type == "production" %}
  replicas: {{exp_params.broker_replicas}}
{% endif %}
  podAntiAffinity:
    topologyKey: kubernetes.io/hostname
    type: custom
    weight: 1
    custom:
{% if deployment_type == "production" %}
      preferredDuringSchedulingIgnoredDuringExecution:
        - weight: 1
          podAffinityTerm:
            topologyKey: kubernetes.io/hostname
            labelSelector:
              matchLabels:
                app.kubernetes.io/name: redpanda
                app.kubernetes.io/instance: "redpanda"
                app.kubernetes.io/component: redpanda-statefulset
{% endif %}
